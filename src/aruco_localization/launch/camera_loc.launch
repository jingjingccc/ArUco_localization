<launch>

    <!-- open camera -->
    <include file="$(find usb_cam)/launch/usb_cam-test.launch" />

    <!-- aruco fixed marker detect id 100-->
    <include file="$(find aruco_ros)/launch/fixed_marker.launch" />

    <!-- <arg name="use_static_tf" default="true" />if="$(arg use_static_tf)" -->
    <node pkg="tf" type="static_transform_publisher" name="central_marker_loc_publisher" args="0.19 0.066 0 0 0 0 1 map fixed_marker_frame 50"  />
    
    <node type="rviz" name="rviz" pkg="rviz" args="-d $(find aruco_localization)/rviz/camera.rviz" />

    <node pkg="aruco_localization" type="camera_loc_" name="camera_loc_" output="screen" />

</launch>